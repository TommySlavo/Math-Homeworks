\end{proof}
\subsection*{Properties of Closed Sets:}
\begin{enumerate}
    \item $\emptyset$, $X$ are closed
    \item $\bigcap$ of any collection of closed sets is closed 
    \item $\bigcup$ of a finite number of closed sets is closed
\end{enumerate}
Follows from the corresponding properties of open sets by taking complements. 

\subsection*{Cauchy Sequences:}
\subsection*{Definition:}
A sequence $\{x_n\} \subset X$ is \underline{Cauchy} if $\forall \epsilon > 0 \ \exists N \text{ s.t. } \forall n, m \geq N \ d(x_n, x_m) < \epsilon$. 
\subsection*{Lemma:}
A convergent sequence $x_n \rightarrow x$ is Cauchy. 

\subsection*{Proof:}
\begin{proof}
    Suppose $x_n \rightarrow x$. $\forall \epsilon > 0 \ \exists N \in \mathbb{N} \text{ s.t. } \forall n \geq N \ d(x_n, x) < \frac{\epsilon}{2}$. By triangle inequality $d(x_n, x_m) \leq d(x_n, x) + d(x, x_m) < \frac{\epsilon}{2} + \frac{\epsilon}{2} = \epsilon$. 
\end{proof}

\subsection*{Defintion:}
A metric space $(X, d)$ is \underline{complete} if every Cauchy sequence in $X$ converges to some point in $X$.

\subsection*{Ex:}
\begin{enumerate}
    \item  $\mathbb{R}$ with the standard metric is complete. 
    \item $(0, 1) = \{x \in \mathbb{R} | 0 < x < 1 \}$ is not complete. For example $x_n = \frac{1}{n} \rightarrow 0$ not in $(0, 1)$. 
\end{enumerate}

\subsection*{Remark:}
Need to know that $\lim x_n$ is unique if it exists. Suppose $x_n \rightarrow y$ and $x_n \rightarrow x$. Then we have $d(x_n, y) \rightarrow 0$, $d(x_n, x) \rightarrow 0$. Using the triangle inequality, $d(x, y) \leq d(x_n, y) + d(x_n, x) \rightarrow 0$. Therefore we have that $d(x, y) = 0 \Rightarrow x = y$. 

\subsection*{$\mathbb{R}$:}

\subsection*{Recall:}
$\mathbb{R}$ has an ordering $<$. 

\subsection*{Definition:}
A nonempty subset $S \subset \mathbb{R}$ is \underline{bounded above} if $\exists x \in \mathbb{R}$ s.t. $y \leq x$ $\forall y \in S$. 

\subsection*{Least Upper Bound Axiom:}
If $S$ is bounded above, then $S$ has a least upper bound i.e., an upper bound $x = \sup(S)$ s.t. $\sup(S) \leq \text{ any upper bound for } S$. 

\subsection*{Theorem:}
$\mathbb{R}$ with metric $d(c, y) = |x - y|$ is complete. 

\subsection*{Proof:}
Let $\{x_n\}$ be a Cauchy sequence in $\mathbb{R}$. Let $S = \{y \in \mathbb{R} | \exists \text{ finitely many } x_n < y\}$. 
\begin{enumerate}
    \item We show $S$ is nonempty and bounded above. 

Given $\epsilon > 0$ $\exists N$ s.t. $d(x_n, x_m) < \epsilon$. This implies all but finitely many $x_n$ lie on $(x_N - \epsilon, x_N + \epsilon )$. 

