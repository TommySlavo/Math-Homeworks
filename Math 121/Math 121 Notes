\subsection*{Lemma:}
$f$ is continuous iff $f$ is continuous at all $x \in X$. 

\section*{Bases:}
$(X, \tau)$ is a topological space.
\subsection*{Definition:}
A \underline{basis} (or base) $B$ of $\tau$ is a subcollection of $\tau$ such that every $U \in \tau$ is a union of elements of $B$. (same as metric space definition)

\subsection*{Remark:}
Often easier to describe a basis rather than the topology itself. 

\subsection*{Example:}
For metric topology $B = \{B(x, r) | x \in X, r \in \mathbb{R}_{> 0} \}$ is a basis for the metric topology. 

\subsection*{Lemma:}
$B$ is a basis $\iff$ $\forall x \in X$ and open neighborhood $x \in V$ $\exists U \in B$ such that $x \in U \subset V$. 

\subsection*{Basis Criterion:}
A collection $B$ of subsets of $X$ is a basis for a topology of $X$ iff
\begin{enumerate}
    \item Every $x \in X$ lies in some $U \in B$. 
    \item For any $U, V \in B$, $U \cap V$ is a union of elements in $B$. 
\end{enumerate}

 \subsection*{Example:}
 For the metric topology, we checked that $B(x, r) \cap B(y, r')$ is union of open balls. 

 \subsection*{Proof:}
 \begin{proof}
     Let $B$ be a basis for $\tau$. 
     \begin{enumerate}
         \item $X \in \tau$ so $X = \bigcup\limits_{\alpha \in I} U_{\alpha}$ for $U_{\alpha} \in B$ and some $x \in U_{\alpha}$. 
         \item This holds since $U \bigcap V$ is open as intersections of open sets are open, so $U \bigcap V \in \tau$. Hence $U \bigcap V$ is a union of open sets in $B$. 
     \end{enumerate}
     Assume $(1)$ and $(2)$ hold. Then $\tau = \{ \bigcup\limits_{U \in B'} U : B' \subset B \}$ (topology generated by $B$). 
     \begin{itemize}
         \item $\emptyset \in \tau$ is clear and $X \in \tau$ follows from $(1)$. 
         \item Union of elements in $\tau$ is still in $\tau$. 
         \item Show that if $\bigcup\limits_{U_{\alpha} \in B'} U_{\alpha} = U, \bigcup\limits_{U_{\beta}' \in B''} U_{\beta}' = V \in \tau$, then $U \bigcap V \in \tau$, as 
         \[
         U \bigcap V = \left(\bigcup U_{\alpha} \right) \bigcap \left(\bigcup U_{\beta}' \right) = \bigcup \left(U_{\alpha}\bigcup U_{\beta}'\right)
         \]
         which is the union of elements in $B$. 
     \end{itemize}
 \end{proof}

\subsection*{Product Topology:}
$(X_1, \tau_1), \ldots , (X_n, \tau_n)$ are topological spaces. 
The product topology on $X_1 \times \cdots \times X_n$ is the topology generated by the basis $B = \{ U_1 \times \cdots \times U_n : U_i \in \tau_i \}$. 

\begin{enumerate}
    \item Every $x = (x_1, \ldots , x_n)$ is in some $U_1 \times \cdots \times U_n$. True since each $x_i \in U_i$. 
    \item $(U_1 \times \cdots \times U_n) \cap (V_1 \times \cdots \times V_n) = (U_1 \cap V_1) \times \cdots \times (U_n \cap V_n) \in B$ as each $(U_i \cap V_i) \in \tau_i$. 
\end{enumerate}
We have $\pi_i: X \xrightarrow[(x_1, \ldots , x_n) \mapsto x_i]{} X_i$ projections. 

\subsection*{Lemma:}
The product topology is the \underline{smallest} topology for which $\pi_i$ are continuous. 

\subsection*{Proof:} 
\begin{proof} 
If $\pi_i$ is continuous, then, for $U_i \in \tau_i$, $\pi_i^{-1}(U_i) = X_1 \times \cdots \times X_n$ is open. Which implies $\bigcap\limits_{i = 1}^n \pi_i^{-1}(U_i) = U_1 \times \cdots \times U_n$ is open. Since $B = \{U_1 \times \cdots \times U_n : U_i \in \tau_i \}$ is a basis, any other topology $\tau'$ for which $\pi_i$ are continuous contains $\tau$ generated by $B$. 
\end{proof}

\subsection*{2nd Countable:}

\subsection*{Definition:}
$(X, \tau)$ is \underline{2nd countable} if it has at most countable basis $B$. 

\subsection*{Theorem: (Lindelof)}
If $X$ is 2nd countable, any open cover $\tau'$ of $X$ has a countable subcover. 

\subsection*{Proof:}
\begin{proof}
    Start with a countable basis $B$, throw away ones not contained in any $U \in \tau'$ called $B'$. $B'$ is countable. Assigment $\Phi:B' \xrightarrow[V \mapsto \Phi(V) = U]{} \tau'$ and we have $V \subset U \in \tau'$ for $V \in B'$. For each $V$ you can find some $U$ that contains $V$. Picking an element in $\tau'$ amongst all $U$ such that $V \subset U$. \underline{Claim}:
    \[
    \bigcup\limits_{V \in B'} \Phi(V) = X
    \]
    the desired countable subcover. For any $x \in X$, $\exists U \in \tau'$ containing $x$. But then $B$ is a basis, so $\exists V \in B$ such that $V \subset U$ and $x \in V$, which implies $x \in V \subset \Phi(V)$ with $V \in B'$ and $\Phi(V) \in \tau'$. 
\end{proof}

\subsection*{Theorem:}
2nd countable $\Rightarrow$ separable ($\exists$ countable dense subset).

\subsection*{Proof:}
\begin{proof}
    $\Phi: B \xrightarrow[V \mapsto x \in V]{} X$. $\Phi(B)$ is dense in $X$. Given any $U \in \tau$, $\exists$ $\Phi(V) \in V \subset U$ such that $V \in B$ and $U \in \tau$. 
\end{proof}

\subsection*{Remark:}
The converse is not true in general. 

\subsection*{Example:}
Cofinite topology (Section 4.1.). 


\section*{Products and Quotients:}
\subsection*{More on (Finite) Products:}
$(X_1, \tau_1), \cdots , (X_n, \tau_n) = $ topological space. $X = X_1 \times \cdots \times X_n$ product topology $\tau$ with $B = \{U_1 \times \cdots \times U_n : U_i \in \tau_i\}$ smallest topology such that $\pi_i: X \rightarrow X_i$ are continuous. 

\subsection*{Lemma:}
$\pi_i: (X, \tau) \rightarrow (X_i, \tau_i)$ is an \underline{open map}. ($U \in \tau \Rightarrow \pi_i(U) \in \tau_i$ image of open is open)

\subsection*{Proof:}
\begin{proof}
    If $U \in \tau$, then it's a union of $U_1 \times \cdots \times U_n$, $U_i \in \tau_i$, $\pi_i(U_1 \times \cdots \times U_n) = U_i$. 

\end{proof}

\subsection*{Lemma:}
Let $E$ be a topological space. Then $f:E \rightarrow X$ is continuous iff $\pi_i \circ f: E \rightarrow X_i$ are all continuous. 

\subsection*{Proof:}
\begin{proof}
    If $f$ is continuous, then $\pi_i \circ f$ is continuous since $\pi_i$ is continuous and compositions are continuous. \\

    Suppose $\pi_i \circ f$ is continuous. Given $U_i \in \tau_i$, $(\pi_i\circ f)^{-1}(U_i)$ open implies $\bigcap\limits_{i = 1}^n (\pi_i \circ f)^{-1}(U_i) = f^{-1}(U_1 \times \cdots \times U_n)$ is open. We have
    \[
    (\pi_i \circ f)^{-1}(U_i) = f^{-1}(\pi_i^{-1}(U_i)) = f^{-1}(X_1 \times \cdots \times U_i \times \cdots \times X_n)
    \]
    and we are done everything is continuous preimage of open sets is open. 
\end{proof}

\subsection*{Quotients:}
Recall an equivalence relation on $X$ is a subset $S$ of $X \times X$ (if $(a, b) \in S$ we write $a \sim b$) such that $\forall a, b, c \in X$
\begin{itemize}
    \item $a \sim a$
    \item If $a\sim b$ then $b \sim a$
    \item If $a\sim b$, $b \sim c$, then $a\sim c$
\end{itemize}
Let $X / \sim$ (quotient)
 be the set of equivalence classes of $X$ with respect to $\sim$. 
 \[
 [a] = \{b \in X : a\sim b \}
 \]
 If $(X, \tau)$ is a topological space, want to define a topology (called quotient topology) denoted $\tau_{\sim}$ on $X / \sim$
 \[
 \pi:X \xrightarrow[a \mapsto \text{[a]} ]{} X / \sim
 \]
 Take the largest topology on $X / \sim$ which makes $\pi$ continuous. $U \in \tau_{\sim}$ iff $\pi^{-1}(U) \in \tau$. 

 \subsection*{Lemma:}
 $\tau_{\sim}$ is the largest topology such that $\pi$ is continuous. 

 \subsection*{Proof:}
 \begin{proof}
     Suppose $\pi: (X, \tau) \rightarrow (X / \sim , \tau')$ is continuous. Then for any $U \in \tau'$, $\pi^{-1}(U) \in \tau \iff U \in \tau_{\sim}$ by the definition of $\tau_{\sim}$. 
 \end{proof}

\subsection*{Example: (A)}
$[0, 1] / 0 \sim 1$ this means $0 \sim 1$ is the only nontrivial equivalence relation. \\ $e^{2\pi t} \longleftrightarrow (\cos 2 \pi t, \sin 2 \pi t)$ \\


