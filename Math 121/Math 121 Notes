\subsection*{Definition:}
A subset $Y \subset X$ is \underline{open} if $\forall y \in Y$ $\exists r > 0$ such that 
\[
B(y, r) \subset Y 
\]
\[
\iff
\]
\[
Y \text{ is a union of open balls}
\]

\subsection*{Properties:}
\begin{enumerate}
    \item $\emptyset$, $X$ are open
    \begin{proof}
        $\emptyset$ has no points so open condition is vacuously true. For any $x \in X$, $r > 0$, $B(x,r) \subset X \Rightarrow X$ is open. 
    \end{proof}
    \item The union of a collection of open subsets of $X$ is an open subset of $X$. (i.e. given a collection $\{U_{\alpha} \}_{\alpha \in I}$ of open sets $\bigcup\limits_{\alpha \in I} U_{\alpha}$ is open)
    \begin{proof}
        Given $x \in \bigcup\limits_{\alpha \in I} U_{\alpha}$, $\exists \alpha \in I$ such that $x \in U_{\alpha}$. Also, $\exists r > 0$ such that $B(x,r) \in U_{\alpha}$. 
        \[
        B(x,r) \subset U_{\alpha} \subset \bigcup\limits_{\alpha \in I} U_{\alpha}
        \]
    \end{proof}
    \item The intersection of a finite number of open subsets is open. (i.e., if $U_1, \cdots , U_n$ are open, then $\bigcap\limits_{i = 1}^n U_i$ is open)
    \begin{proof}
        Given $x \in \bigcap\limits_{i = 1}^n U_i$, $\exists r_i > 0$ such that $B(x, r_i) \subset U_i$
        \[
        B(x, \min(r_1, \cdots, r_n)) \subset U_i \text{ (any)}
        \]
        \[
        \Rightarrow \subset \bigcap\limits_{i = 1}^n U_i
        \]
    \end{proof}
\end{enumerate}
\subsection*{Example:}
$B(x, \frac{1}{n})$; $\bigcap B(x, \frac{1}{i}) = \{x\}$ most of time $\{x\}$ not open for all $x$. 

\section*{Closed Sets, Completeness, and Review of $\mathbb{R}$:}
\subsection*{Closed Sets:}
$(X, d)$ metric space
\subsection*{Definition:}
$Y \subset X$ is \underline{closed} if its complement $X-Y = \{x \in X | x \notin Y \}$ is open. The complement is also denoted as $X \backslash Y$. 
\subsection*{Notation:} 
If $x_1, x_2, \cdots$ is a sequence of points in $X$, then we write 
\[
\{x_n\}_{n=1}^{\infty} \subset X.
\]
\subsection*{Defintion:}
$\{x_n\}_{n=1}^{\infty} \subset X$ \underline{converges} to $x \in X$ if $d(x_n, x) \rightarrow 0$. 

\subsection*{Definition:}
$x$ is the \underline{limit} of $\{x_n\}$ if $x_n \rightarrow x$. 

\subsection*{Definition:}
The \underline{closure} $\overline{Y}$ of $Y$ in $X$ is $\{x \in X | \ \exists \text{ sequence } \{y_n\} \in Y \text{ s.t. } d(y_n, x) \rightarrow 0 \}$. 

\subsection*{Remark:}
Clearly $Y \subset \overline{Y}$. Given $y \in Y$, take $\{y_n = y\}$, $d(y_n, y) = 0 \rightarrow 0$.

\subsection*{Theorem:}
$Y$ is closed $\iff$ $\overline{Y} = Y$. 

\subsection*{Proof:}
\begin{proof}
    Suppose $Y$ is closed. Let $x \in \overline{Y} - Y$. Since $x \notin Y$, $x \in X - Y$ open. Therefore, $\exists \ B(x, r) \subset X - Y$ for some $r > 0$. No points in $Y$ therefore $\exists x \in \overline{Y} - Y$. \\

    Suppose $\overline{Y} = Y$. Let $x \in X - Y$. Given a sequence $r_i \rightarrow 0$ if $\exists y_i \in Y$ s.t. $y_i \in B(x, r_i)$, then $x \in \overline{Y}$ which is a contradiction since $\overline{Y} = Y$ and we are assuming $x \in X-Y = X- \overline{Y}$. Therefore $\exists r_i$ s.t. $B(x, r_i) \subset X - Y$. 

    \tikzset{every picture/.style={line width=0.75pt}} %set default line width to 0.75pt        

