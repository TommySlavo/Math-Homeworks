The $3$ metrics satisfy
\begin{enumerate}
    \item A sequence $(x^{(k)})_{k \in \mathbb{N}}$, $x^k = (x_1^{(k)}, \ldots , x_n^{(k)})$ converges to $x = (x_1, \ldots, x_n)$ iff for each $i = 1, \ldots, n$ we have $(x_i^{(k)})_{k \in \mathbb{N}} \rightarrow x_i$. 
    \item $d_i(x_i, y_i) \leq d(x, y)$
\end{enumerate}
\subsection*{Theorem:}
If $d$ is a metric on $X$ satisfying $(1)$, then the open sets in $(X, d)$ are unions of open sets of the form $U_1 \times \cdots \times U_n$ where $U_i$ is open in $X_i$ (kind of looks like the open square from (3)). 

\subsection*{Proof:}
\begin{proof}
    $X_1 \times \cdots \times U_i^c \times \cdots \times X_n$ is closed $\iff$ $X_1 \times \cdots \times U_i \times \cdots \times X_n$ is open. Let $S_i = X_1 \times \cdots \times U_i \times \cdots \times X_n$. Let $(x^{(k)})_{k \in \mathbb{N}}$ be a sequence in $X_1 \times \cdots \times U_i^c \times \cdots \times X_n$ converging to $x \in X$. But the components converge to corresponding components of $x$ such that $x_k \in X_k$ or $x_i \in U_i$ such that $x \in X_1 \times \cdots U_i^c \times \cdots \times X_n$. Thus, the set is closed and $S_i^c = X_1 \times \cdots \times U_i^c \times \cdots \times X_n$ so that $S_i$ is open. $\bigcap\limits_{i = 1}^n S_i = U_1 \times \cdots \times U_n$. Remember to show that every open set of $X$ is a union of $U_1 \times \cdots \times U_n$ (for next class).     
\end{proof}

\subsection*{Products}

\[
X = X_1 \times \cdots \times X_n, \ (X_k, d_k) \text{ metric space}
\]
\[
x = (x_1, \ldots, x_n) \;
x^{(j)} = \left(x_1^{(j)}, \ldots, x_n^{(j)} \right)
\]

\subsection*{Theorem:}
$x^{(j)} \rightarrow x$ iff $x_k^{(j)} \rightarrow x_k \ \forall k$. 

\subsection*{Theorem:}
If $d$ is a metric, $X$ set, then the open sets in $(X, d)$ are the unions of the form $U_1 \times \cdots \times U_n$ where $U_k \subset X_k$ open. 

\subsection*{Proof:}
\begin{proof}
    \textbf{Step 1:} Showed $U_1 \times \cdots \times U_n$ open if $\forall U_k$ open. \\

    \textbf{Step 2:} Show that every open set of $X$  is a union of $U_1 \times \cdots \times U_n$. Let $U \subset X$ be open. Arguing by contradiction, suppose $\exists \epsilon_j \rightarrow 0$, $x \in U$ and \[y^{(j)} = (y_1^{(j)}, \ldots , y_n^{(j)}) \in B(x_1, \epsilon_j) \times \cdots \times B(x_n, \epsilon_j) \notin U. \]
    But then $y_k^{(j)} \rightarrow x_k$. by the previous theorem it must be that $y \in X = U$ closed set that $y^{(j)} \rightarrow x$ which implies $x \in X - U$ which is a contradiction. 
\end{proof}

\section*{Continuity:}
$(X, d_x)$, $(Y, d_y)$ are metric spaces

\subsection*{Definition:}
A map $f:X \rightarrow Y$ is \underline{continuous} at $x \in X$ if 
\[
(x_n \rightarrow x) \Rightarrow (f(x_n) \rightarrow f(x))
\]
\begin{itemize}
    \item A map $f:X \rightarrow Y$ is \underline{continuous} if $f$ is continuous at all $x \in X$ 
\end{itemize}
\subsection*{Properties:}
\begin{enumerate}
    \item The identity map $id:X \rightarrow X$ $x \mapsto x$ is continuous. 
    \item If $X \xrightarrow{f}$ and $Y \xrightarrow{g} Z$ are continuous, then $X \xrightarrow{g \circ f} Z$ is continuous [HW]
\end{enumerate}

\subsection*{Lemma:}
$f$ is continuous at $x$ iff $\forall \epsilon > 0$ $\exists \delta > 0$ s.t. 
\[
d_x(x, x') < \delta \Rightarrow d_y(f(x), f(x')) < \epsilon
\]




\tikzset{every picture/.style={line width=0.75pt}} %set default line width to 0.75pt        

\begin{tikzpicture}[x=0.75pt,y=0.75pt,yscale=-1,xscale=1]
%uncomment if require: \path (0,300); %set diagram left start at 0, and has height of 300

%Shape: Free Drawing [id:dp4593630576693313] 
\draw  [line width=3] [line join = round][line cap = round] (168.5,112) .. controls (151.3,112) and (137.07,117.43) .. (127.5,127) .. controls (120,134.5) and (119.6,151.3) .. (122.5,160) .. controls (130.06,182.68) and (145.51,210.07) .. (176.5,208) .. controls (217.85,205.24) and (229.01,143.51) .. (202.5,117) .. controls (193.68,108.18) and (177.8,112) .. (167.5,112) ;
%Shape: Free Drawing [id:dp5445449398275048] 
\draw  [line width=3] [line join = round][line cap = round] (168.5,161) .. controls (168.5,158.05) and (172.77,153.46) .. (174.5,150) .. controls (179.12,140.77) and (189.5,122.97) .. (189.5,114) ;
%Shape: Free Drawing [id:dp46453228006146174] 
\draw  [line width=3] [line join = round][line cap = round] (228.5,144) .. controls (256.44,116.06) and (294.74,94.81) .. (335.5,105) .. controls (346.74,107.81) and (357.77,117.27) .. (364.5,124) .. controls (365.87,125.37) and (371.33,134.67) .. (367.5,136) .. controls (350.56,141.89) and (342.98,135.26) .. (343.5,135) .. controls (344.58,134.46) and (346.5,134.2) .. (346.5,133) ;
%Shape: Free Drawing [id:dp5343214782959187] 
