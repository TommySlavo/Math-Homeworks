%Shape: Free Drawing [id:dp2763033335180105] 
\draw  [line width=3] [line join = round][line cap = round] (334.5,89) .. controls (339.41,89) and (348.19,92.24) .. (346.5,99) .. controls (346.11,100.57) and (339.17,106.94) .. (339.5,107) .. controls (345.27,107.96) and (352.95,108.22) .. (350.5,118) .. controls (349.62,121.52) and (343.66,121.28) .. (341.5,122) .. controls (340.64,122.29) and (338.04,128.37) .. (337.5,130) .. controls (336.04,134.39) and (358.63,135.44) .. (350.5,149) .. controls (350.44,149.09) and (338.77,150.15) .. (337.5,151) .. controls (335.88,152.08) and (338.68,155.32) .. (340.5,156) .. controls (342.71,156.83) and (346.75,154.76) .. (347.5,157) .. controls (350.12,164.85) and (345.77,163.15) .. (341.5,166) .. controls (335.85,169.77) and (337.04,174.54) .. (331.5,169) ;
