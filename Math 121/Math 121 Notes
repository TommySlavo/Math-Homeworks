% Text Node
\draw (160,166.4) node [anchor=north west][inner sep=0.75pt]    {$x$};
% Text Node
\draw (188,139.4) node [anchor=north west][inner sep=0.75pt]    {$\delta $};
% Text Node
\draw (298,73.4) node [anchor=north west][inner sep=0.75pt]    {$f$};
% Text Node
\draw (482,114.4) node [anchor=north west][inner sep=0.75pt]    {$\epsilon $};
% Text Node
\draw (463,143.4) node [anchor=north west][inner sep=0.75pt]    {$\delta $};
% Text Node
\draw (448,165.4) node [anchor=north west][inner sep=0.75pt]    {$x$};


\end{tikzpicture}

\subsection*{Proof:}
\begin{proof}
    $\Rightarrow)$Suppose $f$ is continuous at $x$. Arguing by contradiction, suppose $\exists \epsilon > 0$, $\delta_n \rightarrow 0$, and $x_n \in X$ s.t.
    \[
    d(x, x_n) \rightarrow 0 \text{ but } d(f(x), f(x_n)) \geq \epsilon.
    \]
    But then $x_n \rightarrow x$ but $f(x_n) \not\rightarrow f(x)$ which is a contradiction. \\
    $\Leftarrow)$ Pick $\epsilon > 0$ s.t. $d(x, x') < \delta \Rightarrow d(f(x), f(x')) < \epsilon$. Suppose $x_n \rightarrow x$. For some $\delta > 0$ $\exists N > 0$ s.t. $\forall n \geq N$ $d(x, x_n) < \delta \Rightarrow d(f(x), f(x')) < \epsilon.$
    
\end{proof}

\subsection*{Theorem: TFAE}
\begin{enumerate}
    \item $f$ is continuous
    \item For all $x \in X$ and $\epsilon > 0$ $\exists \delta > 0$ s.t. $d(x, x') < \delta \Rightarrow d(f(x), f(x')) < \epsilon$. 
    \item For every open set $U \subset Y$, the preimage of $U$ defined \\ $f^{-1}(U) = \{x \in X : f(x) \in U \}$ is open. 
\end{enumerate}

\subsection*{Proof:}
\begin{proof}
    $(1) \Longleftrightarrow (2)$ has already been done. \\
    $(2) \Rightarrow (3)$ Let $U \subset Y$ be open. Show $f^{-1}(U)$ open. Let $x \in f^{-1}(U)$. $\exists \epsilon > 0$ s.t. $B(f(x), \epsilon) \subset U$.
    By $(2)$ $\exists \delta > 0$ s.t. $f(B(x, \delta)) \subset B(f(x), \epsilon)$. 
    \[
    \therefore B(x, \delta) \subset f^{-1}(U)
    \]
    

