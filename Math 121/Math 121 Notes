\subsection*{HW:}
Prove that $(A) \cong S^1 \subset \mathbb{R}^2$, $(B) \cong S^1 \times S^1$. 

\subsection*{Lemma:}
For $Y$ a topological space,  $\overline{f}: X / \sim \rightarrow Y$ is continuous $\iff$ $\overline{f} \circ \pi : X \rightarrow Y$ is continuous. 

\subsection*{Proof:}
\begin{proof}
    $\overline{f}$ continuous $\Rightarrow \overline{f} \circ \pi$ is continuous by composition. \\

    Suppose $\overline{f} \circ \pi$ is continuous. For any $U$ open in $Y$, $(\overline{f} \circ \pi)^{-1} (U)$ open $\pi^{-1}(\overline{f}^{-1}(U))$ open $\Rightarrow \overline{f}^{-1}(U)$ open by definition $\Rightarrow \overline{f}$ is continuous.
\end{proof}

\subsection*{Corollary:}
Suppose $f:X \to Y$ is continuous. If $f$ is constant on each equivalence class of $\sim$, then $\overline{f}:X / \sim \to Y$ is defined and is continuous. 

\section*{Discussion 4:}
\subsection*{Problem 1:}
Show that the induced topology is the smallest topology which implies $f:X \to Y$ continuous. 

\subsection*{Solution:}
\[
\tau = \{ U \subset X : U = f^{-1}(V), \text{ for open } V \subset Y\}
\]
\begin{enumerate}
    \item $\emptyset, X \in \tau$ such that $f^{-1}(\emptyset) = \emptyset$ and $f^{-1}(Y) = X$
    \item Closed under finite intersection: \\
    Given $U_1, \ldots U_n \in \tau$, 
    \[
    \bigcap\limits_{k = 1}^n U_k = \bigcap\limits_{k = 1}^n f^{-1}(V_k) \ V_k \text{ open in } Y.
    \]
    \[
    = f^{-1}\left(\bigcap\limits_{k = 1}^n V_k \right) \text{ open}. 
    \]
    \[
    \Rightarrow \bigcap\limits_{k = 1}^n U_k \in \tau. 
    \]
    \item Arbitrary union: $\{U_{\alpha}\}_{\alpha \in A} \subset \tau$. Then 
    \[
    \bigcup\limits_{\alpha \in A}U_{\alpha} = \bigcup\limits_{\alpha \in A}f^{-1}(V) = f^{-1} \left(\bigcup\limits_{\alpha \in A} V_{\alpha} \right) \text{ open}
    \]
    \[
    \Rightarrow \bigcup\limits_{\alpha \in A} U_{\alpha \in A} \in \tau
    \]
\end{enumerate}

\subsection*{Problem 2:}
Show that the unit ball $\{(x, y) \in \mathbb{R}^2: x^2 + y^2 = 1\}$ is homeomorphic to the open square $\{(x, y) \in \mathbb{R}^2: 0  < x < 1, 0 < y < 1 \}$. 

\subsection*{Solution:}
\[
\left(\tan\left(\frac{\pi}{2}x\right), \tan \left(\frac{\pi}{2}y \right) \right)
\]
\[
z^2 = (x + it)^2, \ (x^2 - y^2, 2xy)
\]
Another approach: \\
First shift the square so that it is centered at the origin. Then use $\left(\tan \pi x, \tan \pi y \right)$ to map to all of $\mathbb{R}^2$. Then, 
\[
(x, y) \mapsto \frac{2}{\pi}\tan^{-1}\left(||x, y|| \right)\frac{(x, y)}{||x, y||}
\]
with $||x, y||$ norm of unit vector. 

\subsection*{Problem 3: (2.4.1.)}
Let $X$ be a topological space with cofinite topology ($U$ open if $X \backslash U$ is finite). Show that $X$ is separable. When is $X$ second countable? 

\subsection*{Solution:}
Assume $X$ is an infinite set. Separable: Let $S =\{ x_1, x_2, \ldots \} \subset X$. Claim: $S$ is a dense subset. Given: $x \in X$, open neighborhood $U$ of $x$. Then $X \backslash U$ is finite. 
\[
S = \left(S \cap U\right) \cup \left(S \cap U^c \right)
\]
\[
S \cap U^c \subset \underbrace{X\cap U^c}_{\text{finite}} \Rightarrow S\cap U^c \text{ is finite}.
\]

Since $S$ is infinite, $S \cap U$ has to be non-empty. \\

Second-countable:\\

Case 1: ($X$ countable): Yes, since finite product of countable set is countable, 
\[
\{x_1\}, \{x_2\}, \{x_3\}, \ldots
\]
\[
\{x_1, x_2 \}, \{x_1, x_3 \}, \ldots
\]
Since these sets are in $1-1$ correspondence with our open sets, our open sets are also countable. \\

Case 2: ($X$ uncountable) No. By contradiction assume $U_1, U_2, \ldots$ is a countable basis
\[
\bigcup\limits_{n = 1}^{\infty} \left(X\backslash U_n \right) \text{ is countable } \Rightarrow \exists x \not\in \bigcup_{n = 1}^{\infty}\left(X \backslash U_n \right) \text{ since } X \text{ is uncountable}.
\]
Define $U_x = X \backslash \{x \}$, this open. Our hypothesis implies 
\[
U_x = \bigcup\limits_{k =1}^{\infty}U_{n_{k}} \text{ some subsequence}
\]



\begin{align*}
X \backslash U_x &= X\backslash \left(\bigcup\limits_{k =1}^{\infty} U_{n_{k}}\right) \\
&= X \bigcap \left(\bigcup U_{n_{k}} \right)^c \\
&= X \bigcap \left(\bigcap_{k =1}^{\infty} U_{n_{k}}^c \right) \\
&= \bigcap\limits_{k =1}^{\infty}\left(X \bigcap U_{n_{k}}^c \right) \subset X \bigcap U_{n_{k}}^c
\end{align*}
$\{x\} \subset X \bigcap U_{n_{k}}^c$ contradicts $x \notin \bigcup\limits_{n =1}^{\infty} \left(X \backslash U_n \right)$. 

\subsection*{Problem 5:}
Show $[0, 1] / \sim$ with the quotient topology is homeomorphic to $S^c$. 
\[
e^{2 \pi i t} = (\cos(2\pi t), \sin(2 \pi t))
\]

\subsection*{Example:}
let $p: \mathbb{R} \to A = \{a, b, c\}$. 
\[
p(c) = \begin{cases}
    a \text{ if } x > 0 \\
    b \text{ if } x < 0 \\
    c \text{ if } x = 0
\end{cases}
\]
Describe the quotient topology on $A$. $\{\{a\}$, $\{b\}$, $\{a, b\}$, $\{a, b, c\}$, $\emptyset \} = \tau$ a topology. Let $X = \{x_1^2 + x_2^2 \leq 1 \}$, consider $X / \sim$ by gluing $x_1^2 + x_2^2 = 1$ together then $X / \sim \equiv S^2$. Open unit disk is homeomorphic to the unit sphere in $\mathbb{R}^3$ with one point taken away. 

\section*{Separation Axioms:}
A topological space $(X, d)$ is:
\begin{enumerate}
    \item $T_1$ if $\forall x \neq y$ in $X$, $\exists$ open set $U$ such that $ y \in U$ and $x \notin U$. 
    \item $T_2$ (Hausdorff) if $\forall x \neq y$ in $X$, $\exists$ open sets $U$ and $V$ such that $ y \in U$, $ x\in V$ and $U \cap V = \emptyset$.
    \item \underline{Regular} if $\forall$ closed $E \subset X$ and $\forall x \in X \backslash E$ there exists open sets $U$ and $V$ such that $E \subset U$,$x \in V$ and $U \cap V = \emptyset$.
    %if $\forall x \in X$ and closed set $E \subset X$ where $x \notin E$ $\exists$ open sets $U$ and $V$ where $E \subset U$ and $x \in V$ such that $U \cap V = \emptyset$.
    \item $T_3$ if $T_1$ and regular. 
    \item \underline{Normal} if $\forall$ closed sets $E, F$ disjoint $\subset X$ $\exists$ open sets $U, V$ where $E \subset U$ and $F \subset V$ such that $U \cap V = \emptyset$. 
    \item $T_4$ if $T_1$ and normal. 
\end{enumerate}

\subsection*{Properties:}
\begin{enumerate}
    \item $T_1 \iff$ points are closed. 
    \begin{proof}
        If $\{x\}$ is closed, then take $U = X - \{x\}$ which $y \in X- \{x\} = U$. If $T_1$, then for each $y \neq x$ $\exists$ open $U_y$ with $y \in U_y$ but not $x$. Take union $\bigcup\limits_{y \neq x} U_y = X - \{x\}$ open. 
    \end{proof}
    \item $T_4 \Rightarrow T_3 \Rightarrow T_2 \Rightarrow T_1$. 
    \item Hausdorff $\Rightarrow $ Limits of sequences are unique. (HW)
    \item $T_1$ but not $T_2$: Cofinite topology with $X$ infinite. Any two open sets $U, V \neq \emptyset$ have nontrivial intersection if $X$ is infinite. 

    
\end{enumerate}

\subsection*{Remark: (Limits of Sequences)}
$x_n \to x$ means $\forall$ open $U$ with $x \in U$ $\exists N > 0$ such that $\forall n \geq N$ $x_n \in U$. 

\subsection*{Lemma:}
Every metric space $(X, d)$ is $T_4$ (normal and $T_1$)

\subsection*{Proof:}
\begin{proof}
$T_1$: For any two points $x, y$ with $x \neq y$. If $r \leq d(x, y)$, then $y \in B(y, r)$ but $x \notin B(y, r)$. \\
Normal: $E, F$ disjoint closed. Given $x \in E$, $\exists r(x) > 0$ such that $B(x, r(x)) \cap F = \emptyset$. This is true since $F$ is closed and hence $X - F$ is open. Similarly, given $y \in F$ $\exists r(y) > 0$ such that $B(y, r(y)) \cap E = \emptyset$. Claim: $U = \bigcup\limits_{x \in E} B \left(x, \frac{r(x)}{2} \right)$, $V = \bigcup\limits_{y \in F}B\left(y, \frac{r(y)}{2} \right)$ open and contain $E, F$ respectively, $U \bigcap V = \emptyset$. Suppose $U \bigcap V \neq \emptyset$. Let $z \in U \bigcap V$. Suppose wlog $r(x) > r(y)$. $d(x, y) \leq d(x, z) + d(z, y) < \frac{r(x)}{2} + \frac{r(x)}{2} = r(x) \Rightarrow y \in B(x, r(x))$ which is a contradiction. 
\end{proof}

\subsection*{Lemma:}
Normal $\iff$ For every closed $E \subset X$ and open $W$ with $E \subset W$, $\exists$ open $U$ such that $E \subset U \subset \overline{U} \subset W$. \\


\tikzset{every picture/.style={line width=0.75pt}} %set default line width to 0.75pt        

\begin{tikzpicture}[x=0.5pt,y=0.5pt,yscale=-1,xscale=1]
%uncomment if require: \path (0,300); %set diagram left start at 0, and has height of 300

%Shape: Circle [id:dp3470228961271924] 
\draw   (241,132.75) .. controls (241,78.76) and (284.76,35) .. (338.75,35) .. controls (392.74,35) and (436.5,78.76) .. (436.5,132.75) .. controls (436.5,186.74) and (392.74,230.5) .. (338.75,230.5) .. controls (284.76,230.5) and (241,186.74) .. (241,132.75) -- cycle ;
